#!/bin/bash

# If this script doesn't work look at the output of upower -e and upower -d

bat=`upower -i /org/freedesktop/UPower/devices/battery_BAT0 |
    grep percentage |
    sed 's/ *percentage: *//g'`

state=`upower -i /org/freedesktop/UPower/devices/battery_BAT0 |
    grep state |
    sed 's/ *state: *//'`

echo -n "$bat "
