auto-reload yes
reload-time 15
notify-beep yes
notify-program notify-send
notify-format "newsboat: %d new article (%n unreads)" 

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete
browser "/usr/bin/w3m %u"
macro m set browser "/usr/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
macro f set browser "/usr/bin/firefox %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
